
<div class="container">
	<h1>Upload video</h1>
		<% if current_user %>
			<% form_for @video_upload do |f| %>
				<%= render 'shared/errors', object: @video_upload %>

				<div class="form-group">
					<%= f.label :file, "File" %>
					<%= f.file_field :file, class:'form-control', required: true %>
				</div>

				<div class="form-group">
					<%= f.label :Title %>
					<%= f.file_field :title, class:'form-control', required: true %>
				</div>

				<div class="form-group">
					<%= f.label :Description %>
					<%= f.file_field :description, class:'form-control', cols: 3 %>
				</div>

				<%= f.submit "Upload", :class => 'btn btn-primary' %>
				
			<% end %>
			
		<% else %>
			<p>Please <%= link_to "Sign in", '/auth/google_oauth2' %>.</p>
		<% end %>
	
</div>